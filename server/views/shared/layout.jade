doctype
html
    head
        title Academy Events
        link(rel="stylesheet" href="/lib/bootstrap-3.2.0/css/bootstrap.min.css")
        link(rel="stylesheet" href="/css/site.css")
    body
        header.nav
        .container
            .navbar-header
                a.navbar-brand(href="/") Academy Events
            .navbar-collapse.collapse
                ul.nav.navbar-nav
                    li
                        a(href="/") Home
                    if (currentUser)
                        li
                            a(href="/profile") #{currentUser.username}
                        li
                            a(href="/create") Create Event
                        li
                            a(href="/list/0") See upcoming events
                        li
                            a(href="/past/0") See past events

                        li
                            a(href="/logout") Logout
                    else
                        li
                            a(href="/register") Register
                        li
                            a(href="/login") Login

        .container
            if (errorMessage)
                .alert.alert-danger #{errorMessage}
        .container
            if (successMessage)
                .alert.alert-success #{successMessage}

            block main-content

        footer
            p.text-center
                | &copy; Telerik Academy 2014

        include scripts