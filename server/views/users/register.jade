extends ../shared/layout

block main-content
    form(method="post")
        label(for="username") Username
        input(id="username" class="form-control" type="text" name="username" placeholder="Username" value="#{userData.username}" required="required")
        br
        label(for="password") Password
        input(id="password" class="form-control" type="password" name="password" placeholder="Password" required="required")
        br
        label(for="confirm-password") Confirm Password
        input(id="confirm-password" class="form-control" type="password" name="confirmPassword" placeholder="Confirm password" required="required")
        br
        label(for="email") E-mail
        input(id="email" class="form-control" type="email" name="email" placeholder="E-mail" value="#{userData.email}" required="required")
        br
        input(type="submit" class="btn btn-lg" value="Register")